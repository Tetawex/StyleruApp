<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.styleru.styleruapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="org.styleru.styleruapp.StyleruApplication">
        <!-- Потом надо бы поменять theme-->
        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme"

            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".view.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.Project_Profile"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity android:name=".view.activity.Vacancy"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.activity.ProfileActivity"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>
</manifest>