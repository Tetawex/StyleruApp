<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#f7f7f7"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="2dp">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:background="#96c3c3"
            android:gravity="center">
            <ImageView
                android:layout_margin="16dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/image"
                android:background="@drawable/placeholder_person">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Проектный отдел"
                android:id="@+id/name"
                android:textColor="#333"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Аня Подображных"
                android:id="@+id/manager_name"
                android:textSize="16sp"
                android:textColor="#888"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:text="+7(902)567-18-98"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:layout_marginTop="2dp"
                android:text="podobraznykh@styleru.net"
                android:id="@+id/email"
                android:textSize="13sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>