<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:context="org.styleru.styleruapp.view.fragments.ProfileFragmentTabOverall">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Анна"
                        android:textColor="#111111"
                        android:textSize="22dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Подображных"
                        android:paddingTop="3dp"
                        android:textColor="#111111"
                        android:textSize="17dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="30dp"
                        android:text="+7(999)984-29-66"
                        android:textColor="#848484"
                        android:textSize="17dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="sprodan8@gmail.com"
                        android:textColor="#81d8d8"
                        android:textSize="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="0.1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <FrameLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/rect_profile"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="19dp"
                android:textSize="19dp"
                android:text="Направления:"
                android:textColor="#344a4d"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="0dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/d1"
                        layout="@layout/card_profile_direction" />

                    <include
                        android:id="@+id/d1"
                        layout="@layout/card_profile_direction" />

                    <include
                        android:id="@+id/d1"
                        layout="@layout/card_profile_direction" />

                    <include
                        android:id="@+id/d1"
                        layout="@layout/card_profile_direction" />

                    <include
                        android:id="@+id/d1"
                        layout="@layout/card_profile_direction" />

                    <include
                        android:id="@+id/d1"
                        layout="@layout/card_profile_direction" />

                    <include
                        android:id="@+id/d1"
                        layout="@layout/card_profile_direction" />
                </LinearLayout>
            </HorizontalScrollView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="РЕДАКТИРОВАТЬ"
                android:id="@+id/but_change"

                android:background="#FAFAFA"
                android:paddingLeft="20dp"
                android:textColor="#767676"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
