<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="#FFFFFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/image_holder"
            android:scaleType="fitCenter"
            android:layout_height="180dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image"
                android:src="@drawable/placeholder_sample"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16sp">

            <LinearLayout
                android:layout_marginTop="21.6sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#111111"
    android:id="@+id/title"
    android:textSize="25sp"
    android:text="Общий сбор"/>

            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:paddingTop="12.4sp"
    android:layout_height="wrap_content">
            <TextView
                android:id="@+id/date_time"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:text="10 февраля, 11:00"
                android:textColor="#b5b5b5" />
</LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:text="Кирпичная, 33"
                android:textColor="#757575" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingRight="16sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="20dp"
                    android:paddingTop="11sp"
                    android:text="Oh my god, what course"
                    android:textAllCaps="false"
                    android:textColor="#4f4f4f"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16sp"
                        android:layout_gravity=""

                        android:paddingTop="8sp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/list"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingLeft="3dp"
                            android:textSize="16dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/attendants_count"
                            android:text="25"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button_attendants"
                        android:background="#00000000"/>
                </FrameLayout>
            <Button
                android:id="@+id/button_go"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:layout_marginRight="16sp"
                android:layout_weight="0.3"
                android:layout_marginBottom="16sp"
                android:layout_gravity="right"
                android:background="#7cd2d2"
                android:text="Пойти"
                android:textAllCaps="true"

                android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>







</android.support.v7.widget.CardView>