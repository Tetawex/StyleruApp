<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="0dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Общая встреча организации"
            android:textColor="@color/colorPrimaryDarker"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/event_image_margin"
            android:layout_marginRight="@dimen/event_image_margin"
            android:adjustViewBounds="true"
            android:paddingBottom="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder_sample" />

        <TextView
            android:id="@+id/subtitle"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="right|center"
            android:paddingRight="16dp"
            android:text="By Аня Подображных"
            android:textStyle="italic" />

