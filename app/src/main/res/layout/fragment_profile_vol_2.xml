<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFragmentBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorFragmentBackground"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:paddingTop="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_linear">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shadow_linear"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:textSize="@dimen/TextSizeProfile"
                                android:textColor="#111"
                                android:text="Телефон:"/>
                            <TextView
                                android:id="@+id/text_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:textSize="@dimen/TextSizeProfile"
                                android:textColor="#111"
                                android:text="8912331231"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/TextSizeProfile"
                                android:layout_weight="0.8"
                                android:textColor="#111"
                                android:text="Email:"/>
                            <TextView
                                android:id="@+id/text_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:textSize="@dimen/TextSizeProfile"
                                android:textColor="#111"
                                android:text="zubaidulin@styleru.org"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/TextSizeProfile"
                                android:layout_weight="0.8"
                                android:textColor="#111"
                                android:text="Отзыв:"/>
                            <TextView
                                android:id="@+id/text_review"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:textSize="@dimen/TextSizeProfile"
                                android:textColor="#111"
                                android:text="Да я не знаю, что сюда вообще писать, вроде нормально, но я тут явно не менеджер, просто проверяю, что будет, если ввести много текста"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/shadow_linear"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/frame_competence"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16sp"
                        android:layout_marginBottom="4dp"
                        android:paddingTop="12dp"
                        android:text="Компетенции "
                        android:textColor="#344a4d"
                        android:textSize="19dp" />
                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="40dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_height="40dp"
                        android:id="@+id/down_competence"
                        android:visibility="visible"
                        android:background="@drawable/arrow_down"/>
                </FrameLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_competence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="500"
                    app:el_expanded="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_compete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </net.cachapa.expandablelayout.ExpandableLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_linear"
                android:layout_marginTop="6dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/frame_timeline"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16sp"
                        android:layout_marginBottom="4dp"
                        android:paddingTop="12dp"
                        android:text="Таймлайн "
                        android:textColor="#344a4d"
                        android:textSize="19dp" />
                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="40dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="6dp"
                        android:paddingLeft="10dp"
                        android:layout_height="40dp"
                        android:id="@+id/down_timeline"
                        android:visibility="visible"
                        android:background="@drawable/arrow_down"/>
                </FrameLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_timeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="500"
                    app:el_expanded="false">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"

                        android:background="@color/colorFragmentBackground"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginLeft="16dp"
                        android:background="#DFEAEC"
                        android:padding="4dp"
                        android:orientation="horizontal"
                        android:layout_gravity="left|center_horizontal"
                        android:id="@+id/date_start"
                        android:text="20.02.30">
                    </TextView>

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/recycler_timeline">

                        </android.support.v7.widget.RecyclerView>
                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_marginLeft="16dp"
                            android:background="#DFEAEC"
                            android:padding="4dp"
                            android:orientation="horizontal"
                            android:layout_gravity="left|center_horizontal"
                            android:id="@+id/date_end"
                            android:text="20.02.30">
                        </TextView>
                    </LinearLayout>
                </net.cachapa.expandablelayout.ExpandableLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_linear"
                android:layout_marginTop="6dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/frame_projects"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16sp"
                        android:layout_marginBottom="4dp"
                        android:paddingTop="12dp"
                        android:text="Проекты "
                        android:textColor="#344a4d"
                        android:textSize="19dp" />
                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="40dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="6dp"
                        android:paddingLeft="10dp"
                        android:layout_height="40dp"
                        android:id="@+id/down_projects"
                        android:visibility="visible"
                        android:background="@drawable/arrow_down"/>
                </FrameLayout>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_projects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="500"
                    app:el_expanded="false">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/colorFragmentBackground"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_projects"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <!--<include layout="@layout/card_person_project"/>-->
                    </LinearLayout>
                </net.cachapa.expandablelayout.ExpandableLayout>
            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:theme="@style/AppTheme.NoActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginStart="15dp"
            app:expandedTitleMarginBottom="34dp">

            <ImageView
                android:id="@+id/profile_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="#eee"
                app:layout_collapseMode="none" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryTextLightTransparent"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                app:layout_collapseMode="parallax"
                android:id="@+id/text_skills_list"
                app:layout_collapseParallaxMultiplier="0.7"
                android:layout_gravity="bottom"
                android:text=""/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="24dp"
                android:theme="@style/AppTheme.NoActionBar"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <include layout="@layout/view_progressbar_basic"
        android:id="@+id/progressbar"
        android:visibility="gone"/>

</android.support.design.widget.CoordinatorLayout>