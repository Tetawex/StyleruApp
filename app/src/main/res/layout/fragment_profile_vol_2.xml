<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffe5e5e5"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey2"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:paddingTop="0dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#FFF"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFF"
                        android:layout_marginLeft="16sp"
                        android:layout_marginRight="16sp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:textSize="@dimen/TextSizeProfile"
                                android:textColor="#111"
                                android:text="Телефон:"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:textSize="@dimen/TextSizeProfile"
                                android:textColor="#111"
                                android:text="8912331231"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/TextSizeProfile"
                                android:layout_weight="0.8"
                                android:textColor="#111"
                                android:text="Email:"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:textSize="@dimen/TextSizeProfile"
                                android:textColor="#111"
                                android:text="zubaidulin@styleru.org"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/TextSizeProfile"
                                android:layout_weight="0.8"
                                android:textColor="#111"
                                android:text="Отзыв:"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:textSize="@dimen/TextSizeProfile"
                                android:textColor="#111"
                                android:text="Да я не знаю, что сюда вообще писать, вроде нормально, но я тут явно не менеджер, просто проверяю, что будет, если ввести много текста"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#FFF"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/clickable2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16sp"
                        android:layout_marginBottom="4dp"
                        android:paddingTop="12dp"
                        android:text="Компетенции "
                        android:textColor="#344a4d"
                        android:textSize="19dp" />
                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="40dp"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="10dp"
                        android:layout_height="40dp"
                        android:id="@+id/down2"
                        android:visibility="visible"
                        android:background="@drawable/arrow_down"/>
                </FrameLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="500"
                    app:el_expanded="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.RadarChart
                    android:layout_width="match_parent"
                    android:id="@+id/chart"
                    android:layout_height="250dp">
                </com.github.mikephil.charting.charts.RadarChart>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="18sp"
                    android:paddingTop="0sp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_direction" />

                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_direction" />

                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_direction" />

                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_direction" />

                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_direction" />

                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_direction" />

                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_direction" />
                    </LinearLayout>
                </HorizontalScrollView>
                    </LinearLayout>
                </net.cachapa.expandablelayout.ExpandableLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:layout_marginTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/clickable1"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16sp"
                    android:layout_marginBottom="4dp"
                    android:paddingTop="12dp"
                    android:text="Таймлайн "
                    android:textColor="#344a4d"
                    android:textSize="19dp" />
                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="40dp"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="10dp"
                        android:layout_height="40dp"
                        android:id="@+id/down"
                        android:visibility="visible"
                        android:background="@drawable/arrow_down"/>
                </FrameLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="500"
                    app:el_expanded="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                        <include
                            android:id="@+id/d1"
                            layout="@layout/card_profile_timeline" />
                    </LinearLayout>
                </net.cachapa.expandablelayout.ExpandableLayout>
            </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/AppTheme.NoActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginStart="14dp">

            <ImageView
                android:id="@+id/profile_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/kotik"
                app:layout_collapseMode="none" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                android:layout_gravity="bottom"
                android:text="Web, android, Менеджмент"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="24dp"
                app:titleMarginStart="-4dp"
                android:theme="@style/AppTheme.NoActionBar"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>