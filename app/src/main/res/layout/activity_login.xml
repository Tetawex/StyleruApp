<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login_page_gradient"
        android:paddingTop="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Добро пожаловать в «Бизнес в стиле .RU»"
                    android:textColor="#435c60"
                    android:textSize="30dp"/>

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ic_launcher" />

                <EditText
                    android:id="@+id/login_edit"
                    android:layout_width="match_parent"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/password_edit"
                    android:layout_height="25dp"
                    android:singleLine="true"
                    android:layout_marginTop="30dp"
                    android:maxLines="1"
                    android:focusable="true"
                    android:background="#14cbf0f1"
                    android:hint="Логин"
                    android:textColorHint="#4d686c"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/shape_line"/>

                <EditText
                    android:id="@+id/password_edit"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:maxLines="1"

                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:layout_marginTop="20dp"
                    android:imeOptions="actionNext"
                    android:background="#14cbf0f1"
                    android:hint="Пароль"
                    android:textColorHint="#4d686c"/>
                <!--android:nextFocusForward="@id/login_edit"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/shape_line"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    style="@style/FilledButton"
                    android:text="ВОЙТИ"
                    android:textColor="#FFFFFF" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ddf5f6"
        android:gravity="center"
        android:id="@+id/progressbar"
        android:visibility="gone">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
</FrameLayout>
